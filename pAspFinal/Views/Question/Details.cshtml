@model pAspFinal.Models.Question

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h2 class="h4">Question : @Html.DisplayFor(model => model.Id)</h2>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Commentaire)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Commentaire)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ParDefault)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ParDefault)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Parent)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Parent.Titre)
        </dd>
        <dd class="col-sm-1">
            @Html.DisplayFor(model => model.Parent.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Type.Nom)
        </dd>
        <dd class="col-sm-1">
            @Html.DisplayFor(model => model.Type.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Section)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Section.Nom)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Modifier" asp-route-id="@Model?.Id">Modifier la question</a> |
    <a asp-action="Liste">Retour à la liste</a>
</div>
